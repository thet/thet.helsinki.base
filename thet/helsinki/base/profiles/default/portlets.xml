<?xml version="1.0" encoding="UTF-8"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">

  <!-- REMOVE -->
  <assignment
      remove="True"
      name="news"
      manager="plone.rightcolumn"
      category="context"
      key="/"
      type="portlets.News" />
  <assignment
      remove="True"
      name="events"
      manager="plone.rightcolumn"
      category="context"
      key="/"
      type="portlets.Events" />

  <!-- ADD -->

  <!-- left column -->
  <assignment
      name="navigation"
      category="context"
      key="/"
      manager="plone.leftcolumn"
      type="portlets.Navigation"
      visible="True">
    <property name="topLevel">0</property>
    <property name="currentFolderOnly">False</property>
    <property name="name"/>
    <property name="includeTop">False</property>
    <property name="bottomLevel">4</property>
    <property name="root"/>
  </assignment>

  <assignment
      name="review"
      manager="plone.leftcolumn"
      category="context"
      key="/"
      type="portlets.Review" />
  
  <assignment
      name="recent"
      manager="plone.leftcolumn"
      category="context"
      key="/"
      type="portlets.Recent"
      visible="True">
    <property name="count">5</property>
  </assignment>
 
  <assignment
      name="teaser-portlet-startsite"
      category="context"
      key="/"
      manager="plone.leftcolumn"
      type="collective.teaser.teaser_portlet"
      visible="True">
    <property name="importance_levels">
      <element>1</element>
      <element>2</element>
    </property>
    <property name="num_teasers">1</property>
    <property name="show_title">True</property>
    <property name="prefer_altimage">True</property>
    <property name="image_size">column_center</property>
  </assignment>

  <assignment
      name="rss-freie-radios.net"
      category="context"
      key="/"
      manager="plone.leftcolumn"
      type="portlets.rss"
      visible="True">
    <property name="count">3</property>
    <property name="url">http://www.freie-radios.net/portal/podcast.php?radio=43&amp;rss</property>
    <property name="portlet_title">helsinki auf freie-radios.net</property>
    <property name="timeout">100</property>
  </assignment>
  
  <assignment
      name="rss-cba.fro.at"
      category="context"
      key="/"
      manager="plone.leftcolumn"
      type="portlets.rss"
      visible="True">
    <property name="count">3</property>
    <property name="url">http://cba.fro.at/stationsrss/4</property>
    <property name="portlet_title">helsinki auf cba.fro.at</property>
    <property name="timeout">100</property>
  </assignment>

  <!-- right column -->
  <assignment
      name="social-bookmarks-portlet"
      category="context"
      key="/"
      manager="plone.rightcolumn"
      type="sc.social.bookmarks.sb_portlet"
      visible="True"/>

  <assignment
      name="teaser-portlet-all"
      category="context"
      key="/"
      manager="plone.rightcolumn"
      type="collective.teaser.teaser_portlet"
      visible="True">
    <property name="importance_levels">
      <element>1</element>
      <element>2</element>
      <element>3</element>
      <element>4</element>
    </property>
    <property name="num_teasers">1</property>
    <property name="show_title">False</property>
    <property name="prefer_altimage">False</property>
    <property name="image_size">column_right</property>
  </assignment>

  <assignment
      name="gallery-portlet"
      category="context"
      key="/"
      manager="plone.rightcolumn"
      type="collective.gallery.show_galleries"
      visible="True">
    <property name="search_portal">True</property>
    <property name="num_pictures">1</property>
    <property name="image_size">column_right</property>
  </assignment>

</portlets>
